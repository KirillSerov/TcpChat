<Window x:Class="TcpClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TcpClientWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Button x:Name="Connect" Content="Connect" HorizontalAlignment="Left" Margin="558,27,0,0" VerticalAlignment="Top" Height="48" Width="188" Click="Connect_Click"/>
        <TextBox x:Name="Chat" HorizontalAlignment="Center" Margin="0,101,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="691" Height="217" IsReadOnly="True" 
                 IsReadOnlyCaretVisible="false" VerticalScrollBarVisibility="Auto"/>
        <TextBox x:Name="Message" HorizontalAlignment="Left" Margin="58,354,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="511" Height="33"/>
        <Button x:Name="Send" Content="Отправить" HorizontalAlignment="Left" Margin="612,356,0,0" VerticalAlignment="Top" Height="31" Width="134" Click="Send_Click"/>
        <TextBox x:Name="Username" HorizontalAlignment="Left" Margin="285,27,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="234" Height="42"/>

    </Grid>
</Window>
